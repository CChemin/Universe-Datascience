{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "cmd": "{{#script.uri}} sh /mnt/mesos/sandbox/*.sh && {{/script.uri}} /dockerstartup/vnc_startup.sh --wait",
  "instances": 1,
  "env": {
    {{#ubuntu.password}}
      "VNC_PW": "{{ubuntu.password}}"
    {{/ubuntu.password}}
    {{^ubuntu.password}}
    {{/ubuntu.password}}
  },
  "container": {
       "type": "DOCKER",
       "docker": {
           "image": "{{resource.assets.container.docker.image}}",
           "network": "BRIDGE",
           "portMappings": [
              { "containerPort": 6901, "hostPort": 0 }
          ]
       }
   },
   "healthChecks": [
    {
      "portIndex": 0,
      "protocol": "MESOS_TCP",
      "gracePeriodSeconds": 30,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "HAPROXY_GROUP":"external",
    "HAPROXY_0_VHOST":"{{networking.virtual-host}}",
    "HAPROXY_0_REDIRECT_TO_HTTPS": "{{networking.https-redirect}}",
    "HAPROXY_0_ENABLED":"true",
    "HAPROXY_0_FRONTEND_HEAD":"",
    "HAPROXY_0_FRONTEND_BACKEND_GLUE":"",
    "ONYXIA_URL": "https://{{context.externaldns-0}}/vnc.html",
    {{#networking.whitelist.enable}}
    "HAPROXY_0_BACKEND_NETWORK_ALLOWED_ACL": "{{networking.whitelist.ip}}",
    {{/networking.whitelist.enable}}
    "MARATHON_SINGLE_INSTANCE_APP": "true"
  },
  "fetch": [
    {{#script.uri}}
    {
      "uri": "{{script.uri}}",
      "extract": false,
      "executable": true,
      "cache": false
  }
  {{/script.uri}}
  ],
  "upgradeStrategy":{
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  }
}
